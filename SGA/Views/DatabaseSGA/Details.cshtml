@model SGA.Models.DatabaseSGA

@{
    ViewData["Title"] = "Detalhes do banco de dados " + Model.Name;
}

    <h1>Detalhes do banco de dados @Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatabaseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatabaseName) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatabaseServer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatabaseServer) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatabaseUser)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.DatabaseUser &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Port)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Port) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatabaseType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatabaseType.Name) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Environment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Environment.Name) &nbsp;
        </dd>
        @if (Model.DatabaseTypeId == 6)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ConnectionString)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ConnectionString) &nbsp;
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enable)
        </dt>
        <dd class="col-sm-10">
            @{
                String enable = "Ativo";
                if (Model.Enable != EnumSGA.Status.Enabled) { enable = "Inativo"; }
            }
            @enable
        </dd>
    </dl>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChangeDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChangeDate)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">
        <i class="fa fa-backward"></i> Voltar para lista
    </a>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
        <i class="fa fa-edit"></i> Editar
    </a>
</div>

