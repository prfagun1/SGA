@model SGA.Models.Schedule

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control multiLine"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="row">

    <div class="form-group col-md-2">
        <label asp-for="Time" class="control-label"></label>
        <input asp-for="Time" class="form-control" type="time" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="form-group col-md-10">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" class="form-control" asp-items="ViewBag.TypeSelect">
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
</div>



<div class="form-group row">
    <div class="col-md-2">
        <label asp-for="Enable" class="control-label"></label>
        <select asp-for="Enable" class="form-control " asp-items="ViewBag.EnableSelect">
        </select>
        <span asp-validation-for="Enable" class="text-danger"></span>
    </div>
</div>


<div class="form-group" align="right">

    <br />
    <a asp-action="Index" class="btn btn-success">
        <i class="fa fa-backward"></i> Voltar
    </a>
    &nbsp;&nbsp;
    <button type="submit" class="btn btn-success">
        <i class="fa fa-save"></i> Salvar
    </button>

</div>
