@model SGA.Models.Schedule

@{
    ViewData["Title"] = "Detalhes do agendamento " + Model.Name;
}

<h2>Detalhes do agendamento @Model.Name</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @{
                string type = "";
                switch (Model.Type)
                {
                    case EnumSGA.ScheduleType.ImportUsersAndGrups:
                        type = "Importação de usuários e grupos";
                        break;
                    case EnumSGA.ScheduleType.UserEnableDisable:
                        type = "Habilitar e desabilitar usuários";
                        break;
                }
            }
            @type
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enable)
        </dt>
        <dd class="col-sm-10">
            @{
                String enable = "Ativo";
                if (Model.Enable != EnumSGA.Status.Enabled) { enable = "Inativo"; }
            }
            @enable
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastTest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastTest) &nbsp;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastExecution)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastExecution) &nbsp;
        </dd>
    </dl>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChangeDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChangeDate)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">
        <i class="fa fa-backward"></i> Voltar para lista
    </a>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
        <i class="fa fa-edit"></i> Editar
    </a>
</div>