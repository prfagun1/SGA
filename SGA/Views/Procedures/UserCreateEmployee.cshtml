@{
    ViewBag.Title = "Criação de usuários de colaboradores novos";
}

<h1>Criação de usuários de colaboradores novos</h1>

<br />
<form asp-controller="Procedures" asp-action="UserCreateEmployee" method="get">

    <div class="row">
        <div class="form-group col-md-4">
            <div>
                Informe a data inicial
            </div>
            <input type="date" id="StartDate" name="StartDate" value="@ViewBag.StartDate" class="form-control searchBoxSize">
        </div>

        <div class="form-group col-md-4">
            <div>
                Informe a data final
            </div>
            <input type="date" id="EndDate" name="EndDate" value="@ViewBag.EndDate" class="form-control searchBoxSize">
        </div>

    </div>

    <div class="row">
        <div class="col-md-8" align="right">
            <button type="submit" value="Pesquisar" class="btn btn-success">
                <span class="fa fa-search"></span>
                Criar usuários
            </button>
        </div>
    </div>

</form>

<br />
<br />

<div class="status">
    @ViewBag.Status
</div>

<table class="table">
    <thead class="table-report-header">
        <tr>

            @{
                String[] columns = new string[] { "Nome completo", "Usuário", "Senha", "Crachá", "Setor", "Cargo", "Centro de custo", "Data de admissão"};
                foreach (string column in columns)
                {
                    <th class="cabecalhos-pesquisa">
                        @column
                    </th>
                }
            }

        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.UserList)
        {
        <tr onmouseover="ChangeLineColorAdd(this)" onmouseout="ChangeLineColorRemove(this)">
            <td class="cabecalhos-pesquisa">
                @item.FullName
            </td>
            <td class="cabecalhos-pesquisa">
                @item.Username
            </td>
            <td class="cabecalhos-pesquisa">
                @item.Password
            </td>
            <td class="cabecalhos-pesquisa">
                @item.EmployeeId
            </td>
            <td class="cabecalhos-pesquisa">
                @item.Department
            </td>
            <td class="cabecalhos-pesquisa">
                @item.JobRole
            </td>
            <td class="cabecalhos-pesquisa">
                @item.CC
            </td>
            <td class="cabecalhos-pesquisa">
                @item.AdmissionDate.ToShortDateString()
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/user-create-employee.js"></script>
    <script src="~/js/table-lines.js" type="text/javascript"></script>
}
