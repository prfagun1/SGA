@model SGA.Models.ApplicationAD

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Id" />
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control multiLine"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ApplicationId" class="control-label"></label>
    <select asp-for="ApplicationId" class="form-control" asp-items="ViewBag.ApplicationId">
        <option disabled selected></option>
    </select>
    <span asp-validation-for="ApplicationId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ApplicationTypeId" class="control-label"></label>
    <select asp-for="ApplicationTypeId" class="form-control" asp-items="ViewBag.ApplicationTypeId">
        <option disabled selected></option>
    </select>
    <span asp-validation-for="ApplicationTypeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Groups" class="control-label"></label>
    <textarea asp-for="Groups" class="form-control multiLine"></textarea>
    <span asp-validation-for="Groups" class="text-danger"></span>
    *Informe os grupos separados por ";" <br />
    *Informar o inicio do nome do grupo para buscar mais de um
</div>

<div class="form-group">
    <label asp-for="Enable" class="control-label"></label>
    <select asp-for="Enable" class="form-control col-md-2" asp-items="ViewBag.EnableSelect">
    </select>
    <span asp-validation-for="Enable" class="text-danger"></span>
</div>

<div class="form-group" align="right">

    <br />
    <a asp-action="Index" class="btn btn-success">
        <i class="fa fa-backward"></i> Voltar
    </a>
    &nbsp;&nbsp;
    <button type="submit" class="btn btn-success">
        <i class="fa fa-save"></i> Salvar
    </button>

</div>
